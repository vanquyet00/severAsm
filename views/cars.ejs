    <style>
      /* Custom CSS to resize images and adjust card layout */
      .car-card {
        width: 300px; /* Set the width of each card */
        display: inline-block; /* Display cards in a row */
        margin: 10px; /* Add some space between cards */
      }
  
      .car-image {
        max-width: 100px; /* Set the maximum width of the car image */
        height: auto; /* Maintain aspect ratio */
        margin: 0 auto; /* Center the image horizontally */
      }
    </style>
</head>

<body>
 <div class="container">
  <h1>Quản lý dữ liệu</h1>

  <!-- Form thêm dữ liệu -->
  <form action="/cars" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="code">CODE CAR</label>
      <input name="codeCar" type="text" class="form-control" >
    </div>
    <div class="form-group">
      <label for="name">NAME CAR</label>
      <input name="name" type="text" class="form-control" >
    </div>
    <div class="form-group">
      <label for="price">PRICE</label>
      <input name="price" type="text" class="form-control" >
    </div>
    <div class="form-group">
      <label for="year">YEAR</label>
      <input name="year" type="year" class="form-control" >
    </div>
    <div style="margin-top: 20px;"  class="form-group">
        <input class="form-control" type="file" id="images" name="images" multiple ><br>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
  </form>


  



  <div id="success-message">
    <% if (typeof successMessage !== 'undefined') { %>
        <p  style="color: green;"><%= successMessage %></p>
    <% } %>
</div>
